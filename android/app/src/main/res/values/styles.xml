<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Main activity theme - no splash, just direct content -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@color/splash_background_dark</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor">@color/splash_background_dark</item>
        <item name="android:navigationBarColor">@color/splash_background_dark</item>
        <!-- Disable any animation when launching -->
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- Light Splash Theme - for custom SplashActivity -->
    <style name="AppTheme.SplashLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/splash_background_light</item>
        <item name="android:statusBarColor">@color/splash_background_light</item>
        <item name="android:navigationBarColor">@color/splash_background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Dark Splash Theme - for custom SplashActivity -->
    <style name="AppTheme.SplashDark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/splash_background_dark</item>
        <item name="android:statusBarColor">@color/splash_background_dark</item>
        <item name="android:navigationBarColor">@color/splash_background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>